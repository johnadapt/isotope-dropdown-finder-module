    "homepage": "http://brightcloudstudio.com/",
    "keywords":["contao", "isotope", "attribute", "dropdown", "finder", "module"],
    "type":"contao-module",
    "license":"LGPL-3.0-or-later",
    "authors":[
        {
            "name":"Bright Cloud Studio",
            "homepage":"https://brightcloudstudio.com"
        }
    ],
    "require":{
        "php": "^8.0",
        "contao/core-bundle": "^4.13",
            "isotope/isotope-core": ">=2.8"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Bcs\\": [
                "system/modules/isotope-dropdown-finder-module/library/Bcs"
